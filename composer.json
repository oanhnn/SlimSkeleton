{
    "name": "oanhnn/slim-skeleton",
    "type": "project",
    "description": "A Slim Framework skeleton application for rapid development",
    "keywords": ["microframework","rest","router"],
    "homepage": "https://github.com/oanhnn/SlimSkeleton/wiki",
    "license": "MIT",
    "authors": [
        {
            "name": "OanhNN",
            "email": "oanhnn.bk@gmail.com",
            "homepage": "https://github.com/oanhnn"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "monolog/monolog": "~1.6",
        "slim/slim": "~2.4",
        "slim/views": "0.*",
        "twig/twig": "~1.13"
    },
    "require-dev": {
        "phpunit/phpunit": "3.8.*"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "post-create-project-cmd": [
            "cp --backup --force app/config/db.php.dist app/config/db.php",
            "chmod -R 777 app/logs/ app/cache/",
            "find app/ -type f -name 'README.md' | xargs rm -rf",
            "find public/ -type f -name 'README.md' | xargs rm -rf",
            "rm -rf bin/README.md src/README.md vendor/README.md"
        ]
    }
}
